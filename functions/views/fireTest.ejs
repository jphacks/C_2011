<body>
    <!--<img class="logo" src="image/hoge.png" title="ロゴ">  ロゴ？-->
    <h1><a href="/">Back to Index</a></h1>
    <div>
        <div>
            <input type="text" id="title" placeholder="title（任意）">
        </div>
        <div>
            <textarea id="content" placeholder="message（必須）"></textarea>
        </div>
        <div>
            <input type="text" id="person" placeholder="name">
        </div>
        <div>
            <button id="post">投稿する</button>
        </div>
    </div>
    <div id="todo_list"></div>
    <script>
        // 登録処理
        const postAction = () => {
            const title = $("#title").val();
            const content = $("#content").val();
            const person = $("#person").val();
            if (content && content !== "") {
                ref.push({
                    title: title,
                    content: content,
                    person: person,
                    date: new Date().getTime()
                });
            }
            // とりあえず登録終わったら空にしとく
            $("#title").val("");
            $("#content").val("");
            $("#person").val("");
        };

        // 登録時のアクション
        $('#post').click(() => postAction());
        // // 初期表示と登録後のコールバック
        ref.on("child_added", (snapshot) => {
            dispTodo({
                id: snapshot.key,
                value: snapshot.val()
            });
        });
        // TODOを表示する
        const dispTodo = (todo) => {
            let person="名無しのランナー";
            if(todo.value.person!==""){person=todo.value.person}
            // TODO内容をリストの一番上に挿入
            const todo_html = todo.value.title + "<br />" + todo.value.content + "<br />" + person + "<br />";
            $("#todo_list").prepend(`<div id="${todo.id}">${todo_html}<button class="done">投稿削除</button></div>`);
        }
        // 削除処理
        $(document).on('click', '.done', (event) => {
            const id = $(event.target).closest('div').attr('id');
            firebase.database().ref('todo/' + id).remove();
        });
        // 削除
        ref.on("child_removed", (snapshot) => {
            $("#" + snapshot.key).remove();
        });
    </script>
</body>

